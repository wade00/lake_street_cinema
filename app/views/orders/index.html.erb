<div class="container">
  <div class="row text-center">
    <p>View orders by movie</p>
    <ul class="movie-order-review-list">
      <% @movies.each do |movie| %>
        <li><%= link_to movie.title, movie_order_review_path(movie) %></li>
      <% end %>
    </ul>
  </div>

  <hr />

  <div class="row text-center">
    <h3>All Orders</h3>
  </div>

  <div class="row">
    <table class="table table-hover">
      <th>Movie</th>
      <th>Showtime</th>
      <th>Theater Number</th>
      <th>Number of Tickets</th>
      <th>Total (with tax)</th>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.movie.title %></td>
          <td><%= to_strftime(order.showtime) %></td>
          <td><%= order.theater.number %></td>
          <td><%= order.tickets %></td>
          <td><%= number_to_currency(order_total(order.showtime, order.tickets)) %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
